<section class="vh-100" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-9 col-xl-7">
        <div class="card rounded-3">
          <div class="card-body p-4">

            <%= content_tag :div, class: "alert alert-info", id: "notice" do -%>
              <%= notice %>
            <% end if notice.present? -%>
            
            <% if @task.errors.any? %>
              <% @task.errors.full_messages.each do |message| %>
                <%= content_tag :div, class: "alert alert-danger", role: 'alert' do -%>
                  <%= message %>
                <% end -%>
              <% end %>
            <% end %>
              
            <h4 class="text-center my-3 pb-3">To Do App</h4>
            <div class="row row-cols-lg-auto g-3 justify-content-center align-items-center mb-4 pb-2">
              <%= button_to "Tasks list", tasks_path, method: :get, class: "btn btn-primary" %>
            </div>

            <%= form_for(@task, url: tasks_path, html: { class: 'row row-cols-lg-auto g-3 justify-content-center align-items-center mb-4 pb-2' }) do |f| %>
              <div class="form-group">
                <label class="form-label">
                  <span>Title</span>
                  <%= f.text_field :title, class: "form-control" %>
                </label>
              </div>

              <div class="form-group">
                <label class="form-label">
                  <span>Description</span>
                  <%= f.text_area :description, class: "form-control" %>
                </label>
              </div>

              <button type="submit" class="btn btn-success">Save</button>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
